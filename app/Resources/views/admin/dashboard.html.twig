{% extends "admin/layout.html.twig" %}

{% block title %}
    Dashboard | {{ parent() }}
{% endblock %}

{% block section %}

    <section class="content-header">
        <h1>
            Dashboard
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path("admin_dashboard") }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        {% include "admin/flash_message.html.twig" %}

        <div class="row">

            <div class="col-lg-4">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Logged in as
                            <span class="label label-primary">{{ app.user.username }}</span>
                        </h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body">
                        <ul class="list-unstyled">
                            <li>
                                <a href="{{ path("home") }}" target="_blank">
                                    <i class="fa fa-home"></i>
                                    Visit public website
                                </a>
                                <hr>
                            </li>
                            <li>
                                <a href="{{ path("admin_account_edit") }}">
                                    <i class="fa fa-pencil-square-o"></i>
                                    Change account settings
                                </a>
                            </li>
                            <li>
                                <a href="{{ path("admin_change_password") }}">
                                    <i class="fa fa-key"></i>
                                    Change password
                                </a>
                            </li>
                            <li>
                                <a href="{{ path("admin_logout") }}">
                                    <i class="fa fa-sign-out"></i>
                                    Log out
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}